{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "matchDatasources": ["helm"],
      "matchPackageNames": [
        "postgresql",
        "redis",
        "mongodb",
        "mariadb"
      ],
      "matchUpdateTypes": ["minor", "patch"],
      "extends": ["schedule:quarterly"]
    }
  ]
}
